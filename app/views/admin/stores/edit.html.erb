<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Store", admin_store_path(@store), 
        class: "text-blue-600 hover:text-blue-800 mb-4 inline-block" %>
  </div>

  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h1 class="text-2xl font-bold mb-6">Edit Store</h1>

      <%= form_with model: [:admin, @store], local: true do |form| %>
        <% if @store.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-6">
            <h2 class="font-semibold">Please fix the following errors:</h2>
            <ul class="list-disc list-inside mt-2">
              <% @store.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, rows: 4, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.telephone_field :phone, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :address, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :address, rows: 3, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :website, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.url_field :website, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :status, Store.statuses.keys.map { |s| [s.titleize, s] }, {}, 
                class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div class="flex items-center">
            <%= form.check_box :verified, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= form.label :verified, "Verified Store", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        </div>

        <div class="mt-8 flex space-x-4">
          <%= form.submit "Update Store", class: "bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <%= link_to "Cancel", admin_store_path(@store), 
              class: "bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
