<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">MLM Referral System</h1>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-700">Total Referrals</h3>
      <p class="text-3xl font-bold text-blue-600"><%= @total_referrals %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-700">Active Codes</h3>
      <p class="text-3xl font-bold text-green-600"><%= @total_referral_codes %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-700">Pending Commissions</h3>
      <p class="text-3xl font-bold text-orange-600">RM<%= number_with_precision(@summary[:total_pending], precision: 2) %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-700">Paid Commissions</h3>
      <p class="text-3xl font-bold text-purple-600">RM<%= number_with_precision(@summary[:total_paid], precision: 2) %></p>
    </div>
  </div>

  <!-- Commission Summary -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4">Commission Summary</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center">
        <h3 class="text-lg font-medium text-gray-700">Level 1</h3>
        <p class="text-2xl font-bold text-green-600">RM<%= number_with_precision(@summary[:level1_total], precision: 2) %></p>
        <p class="text-sm text-gray-500">Direct Referrals</p>
      </div>
      <div class="text-center">
        <h3 class="text-lg font-medium text-gray-700">Level 2</h3>
        <p class="text-2xl font-bold text-blue-600">RM<%= number_with_precision(@summary[:level2_total], precision: 2) %></p>
        <p class="text-sm text-gray-500">Indirect Referrals</p>
      </div>
      <div class="text-center">
        <h3 class="text-lg font-medium text-gray-700">Level 3</h3>
        <p class="text-2xl font-bold text-purple-600">RM<%= number_with_precision(@summary[:level3_total], precision: 2) %></p>
        <p class="text-sm text-gray-500">Third Level</p>
      </div>
    </div>
  </div>

  <!-- Top Earners and Recent Commissions -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Top Earners -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <h2 class="text-xl font-semibold">Top Earners</h2>
      </div>
      <div class="p-6">
        <% if @top_earners.any? %>
          <div class="space-y-4">
            <% @top_earners.each_with_index do |user, index| %>
              <div class="flex items-center justify-between py-2 border-b">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center mr-3">
                    <span class="text-sm font-medium text-gray-600"><%= index + 1 %></span>
                  </div>
                  <div>
                    <p class="font-medium"><%= user.full_name %></p>
                    <p class="text-sm text-gray-600"><%= user.email %></p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="font-bold text-green-600">RM<%= number_with_precision(user.earned_commissions.sum(:commission_amount), precision: 2) %></p>
                  <p class="text-sm text-gray-500"><%= user.total_referrals %> referrals</p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No earnings yet</p>
        <% end %>
      </div>
    </div>

    <!-- Recent Commissions -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <h2 class="text-xl font-semibold">Recent Commissions</h2>
      </div>
      <div class="p-6">
        <% if @recent_commissions.any? %>
          <div class="space-y-4">
            <% @recent_commissions.each do |commission| %>
              <div class="flex items-center justify-between py-2 border-b">
                <div>
                  <p class="font-medium"><%= commission.referrer.full_name %></p>
                  <p class="text-sm text-gray-600">Level <%= commission.level %> from <%= commission.user.full_name %></p>
                  <p class="text-xs text-gray-500"><%= commission.formatted_date %></p>
                </div>
                <div class="text-right">
                  <p class="font-medium text-green-600"><%= commission.formatted_amount %></p>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                    <%= commission.status == 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= commission.status.titleize %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No commissions yet</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
