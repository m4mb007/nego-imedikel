<!-- Refined Tab Design Component -->
<style>
/* Enhanced Tab Styling */
.tab-button {
  @apply text-gray-500 hover:text-gray-700 hover:bg-gray-100 transition-all duration-200;
}

.tab-button.active {
  @apply text-blue-600 bg-white;
}

.tab-button.active .absolute {
  @apply scale-x-100;
}

.tab-button:hover .absolute {
  @apply scale-x-100;
}

.tab-button.active i {
  @apply text-blue-500;
}

.tab-button:hover i {
  @apply text-gray-600;
}

/* Tab Content Animation */
.tab-content {
  display: none;
  opacity: 0;
  transform: translateY(10px);
  transition: all 0.3s ease-in-out;
}

.tab-content.active {
  display: block;
  opacity: 1;
  transform: translateY(0);
}

/* Form Input Enhancements */
.form-input, .form-select {
  @apply bg-white transition-all duration-200;
}

.form-input:focus, .form-select:focus {
  @apply shadow-lg;
}

/* Responsive Design */
@media (max-width: 768px) {
  .tab-button {
    @apply px-3 py-3 text-xs;
  }
  
  .tab-button span {
    @apply hidden;
  }
  
  .tab-button i {
    @apply text-lg;
  }
}
</style>

<script>
function showTab(tabName) {
  // Hide all tab contents with animation
  const tabContents = document.querySelectorAll('.tab-content');
  tabContents.forEach(content => {
    if (content.classList.contains('active')) {
      content.style.opacity = '0';
      content.style.transform = 'translateY(10px)';
      setTimeout(() => {
        content.classList.remove('active');
        content.classList.add('hidden');
      }, 150);
    }
  });

  // Remove active class from all tab buttons
  const tabButtons = document.querySelectorAll('.tab-button');
  tabButtons.forEach(button => {
    button.classList.remove('active');
    button.classList.add('text-gray-500');
  });

  // Show selected tab content with animation
  const selectedContent = document.getElementById(`tab-content-${tabName}`);
  if (selectedContent) {
    setTimeout(() => {
      selectedContent.classList.remove('hidden');
      selectedContent.classList.add('active');
      setTimeout(() => {
        selectedContent.style.opacity = '1';
        selectedContent.style.transform = 'translateY(0)';
      }, 50);
    }, 200);
  }

  // Add active class to selected tab button
  const selectedButton = document.getElementById(`tab-${tabName}`);
  if (selectedButton) {
    selectedButton.classList.add('active');
    selectedButton.classList.remove('text-gray-500');
  }
}

// Initialize with first tab active
document.addEventListener('DOMContentLoaded', function() {
  showTab('general');
});
</script>
