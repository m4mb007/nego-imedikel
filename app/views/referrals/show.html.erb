<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">My Referrals</h1>

    <!-- Apply Referral Code -->
    <% unless @user.referrals.exists?(status: 'active') %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
        <h2 class="text-xl font-semibold text-blue-900 mb-4">Apply Referral Code</h2>
        <p class="text-blue-700 mb-4">Enter a referral code to join the network and start earning commissions!</p>
        
        <%= form_with url: apply_referral_path, method: :post, local: true, class: "flex gap-4" do |form| %>
          <%= form.text_field :referral_code, 
              placeholder: "Enter referral code (e.g., ABC12345)",
              class: "flex-1 border border-blue-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <%= form.submit "Apply Code", 
              class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        <% end %>
      </div>
    <% end %>

    <!-- Your Referral Code -->
    <div class="bg-white rounded-lg shadow p-6 mb-8">
      <h2 class="text-xl font-semibold mb-4">Your Referral Code</h2>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-2xl font-mono font-bold text-green-600"><%= @user.referral_code_string %></p>
          <p class="text-sm text-gray-600 mt-1">Share this code with friends to earn commissions!</p>
        </div>
        <button onclick="navigator.clipboard.writeText('<%= @user.referral_code_string %>')" 
                class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
          Copy Code
        </button>
      </div>
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700">Total Referrals</h3>
        <p class="text-3xl font-bold text-blue-600"><%= @referral_stats[:total_referrals] %></p>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700">Total Earnings</h3>
        <p class="text-3xl font-bold text-green-600">RM<%= number_with_precision(@referral_stats[:total_earnings], precision: 2) %></p>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700">Pending Earnings</h3>
        <p class="text-3xl font-bold text-orange-600">RM<%= number_with_precision(@referral_stats[:pending_earnings], precision: 2) %></p>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700">Level 1 Earnings</h3>
        <p class="text-3xl font-bold text-purple-600">RM<%= number_with_precision(@referral_stats[:level1_earnings], precision: 2) %></p>
      </div>
    </div>

    <!-- Referral Tree -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Your Referrals -->
      <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b">
          <h2 class="text-xl font-semibold">Your Referrals</h2>
        </div>
        <div class="p-6">
          <% if @referrals.any? %>
            <div class="space-y-4">
              <% @referrals.each do |referral| %>
                <div class="flex items-center justify-between py-2 border-b">
                  <div>
                    <p class="font-medium"><%= referral.user.full_name %></p>
                    <p class="text-sm text-gray-600">Level <%= referral.level %> â€¢ <%= referral.user.email %></p>
                    <p class="text-xs text-gray-500">Joined <%= referral.created_at.strftime("%B %d, %Y") %></p>
                  </div>
                  <div class="text-right">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      Level <%= referral.level %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No referrals yet. Share your referral code to start earning!</p>
          <% end %>
        </div>
      </div>

      <!-- Recent Commissions -->
      <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b">
          <h2 class="text-xl font-semibold">Recent Commissions</h2>
        </div>
        <div class="p-6">
          <% if @commissions.any? %>
            <div class="space-y-4">
              <% @commissions.each do |commission| %>
                <div class="flex items-center justify-between py-2 border-b">
                  <div>
                    <p class="font-medium">Level <%= commission.level %> Commission</p>
                    <p class="text-sm text-gray-600">From <%= commission.user.full_name %></p>
                    <p class="text-xs text-gray-500"><%= commission.formatted_date %></p>
                  </div>
                  <div class="text-right">
                    <p class="font-medium text-green-600"><%= commission.formatted_amount %></p>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                      <%= commission.status == 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= commission.status.titleize %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No commissions yet. Your earnings will appear here when your referrals make purchases.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Commission Rates Info -->
    <div class="bg-gray-50 rounded-lg p-6 mt-8">
      <h2 class="text-xl font-semibold mb-4">How It Works</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="text-green-600 font-bold">1</span>
          </div>
          <h3 class="font-semibold text-gray-900">Level 1 (Direct)</h3>
          <p class="text-sm text-gray-600">Earn <%= (MlmService.level1_rate * 100).to_i %>% commission from direct referrals</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="text-blue-600 font-bold">2</span>
          </div>
          <h3 class="font-semibold text-gray-900">Level 2 (Indirect)</h3>
          <p class="text-sm text-gray-600">Earn <%= (MlmService.level2_rate * 100).to_i %>% commission from indirect referrals</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="text-purple-600 font-bold">3</span>
          </div>
          <h3 class="font-semibold text-gray-900">Level 3 (Third Level)</h3>
          <p class="text-sm text-gray-600">Earn <%= (MlmService.level3_rate * 100).to_i %>% commission from third-level referrals</p>
        </div>
      </div>
    </div>
  </div>
</div>
