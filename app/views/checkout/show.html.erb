<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Checkout</h1>
    <p class="text-gray-600 mt-2">Complete your purchase</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Checkout Steps -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow-sm border p-6 mb-6">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-4">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">
                1
              </div>
              <span class="ml-2 text-sm font-medium text-gray-900">Shipping</span>
            </div>
            <div class="w-8 h-1 bg-gray-300"></div>
            <div class="flex items-center">
              <div class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-semibold">
                2
              </div>
              <span class="ml-2 text-sm font-medium text-gray-500">Payment</span>
            </div>
            <div class="w-8 h-1 bg-gray-300"></div>
            <div class="flex items-center">
              <div class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-semibold">
                3
              </div>
              <span class="ml-2 text-sm font-medium text-gray-500">Confirmation</span>
            </div>
          </div>
        </div>

        <!-- Shipping Address Section -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Shipping Address</h3>
          <% if @shipping_addresses.any? %>
            <div class="space-y-3">
              <% @shipping_addresses.each do |address| %>
                <div class="border rounded-lg p-4 cursor-pointer hover:border-green-500">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="font-medium text-gray-900"><%= address.full_name %></p>
                      <p class="text-sm text-gray-600"><%= address.street_address %></p>
                      <p class="text-sm text-gray-600"><%= address.city %>, <%= address.state %> <%= address.postal_code %></p>
                      <p class="text-sm text-gray-600"><%= address.phone %></p>
                    </div>
                    <div class="flex items-center space-x-2">
                      <% if address.is_default %>
                        <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">Default</span>
                      <% end %>
                      <input type="radio" name="shipping_address_id" value="<%= address.id %>" class="text-green-600">
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <i class="fas fa-map-marker-alt text-gray-400 text-4xl mb-4"></i>
              <p class="text-gray-600 mb-4">No shipping addresses found</p>
              <%= link_to new_address_path(address_type: 'shipping'), class: "inline-flex items-center bg-green-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-green-700 transition-colors" do %>
                <i class="fas fa-plus mr-2"></i>
                Add Shipping Address
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Billing Address Section -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Billing Address</h3>
          <% if @billing_addresses.any? %>
            <div class="space-y-3">
              <% @billing_addresses.each do |address| %>
                <div class="border rounded-lg p-4 cursor-pointer hover:border-green-500">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="font-medium text-gray-900"><%= address.full_name %></p>
                      <p class="text-sm text-gray-600"><%= address.street_address %></p>
                      <p class="text-sm text-gray-600"><%= address.city %>, <%= address.state %> <%= address.postal_code %></p>
                      <p class="text-sm text-gray-600"><%= address.phone %></p>
                    </div>
                    <div class="flex items-center space-x-2">
                      <% if address.is_default %>
                        <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">Default</span>
                      <% end %>
                      <input type="radio" name="billing_address_id" value="<%= address.id %>" class="text-green-600">
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <i class="fas fa-credit-card text-gray-400 text-4xl mb-4"></i>
              <p class="text-gray-600 mb-4">No billing addresses found</p>
              <%= link_to new_address_path(address_type: 'billing'), class: "inline-flex items-center bg-green-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-green-700 transition-colors" do %>
                <i class="fas fa-plus mr-2"></i>
                Add Billing Address
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Continue Button -->
        <div class="flex justify-between">
          <%= link_to cart_path, class: "inline-flex items-center text-gray-600 hover:text-gray-800" do %>
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Cart
          <% end %>
          
          <%= link_to shipping_checkout_path, class: "inline-flex items-center bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors" do %>
            Continue to Shipping
            <i class="fas fa-arrow-right ml-2"></i>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Order Summary -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-sm border p-6 sticky top-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h3>
        
        <div class="space-y-4 mb-6">
          <% @cart_items.each do |item| %>
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <% if item.product.main_image %>
                  <%= image_tag item.product.main_image.image, class: "w-12 h-12 object-cover rounded" %>
                <% else %>
                  <div class="w-12 h-12 bg-gray-200 rounded flex items-center justify-center">
                    <i class="fas fa-image text-gray-400"></i>
                  </div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate"><%= item.product.name %></p>
                <p class="text-sm text-gray-500">Qty: <%= item.quantity %></p>
              </div>
              <div class="text-sm font-medium text-gray-900">
                RM <%= number_with_precision(item.total_price, precision: 2) %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="border-t pt-4 space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Subtotal</span>
            <span class="font-medium">RM <%= number_with_precision(@cart_total, precision: 2) %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Shipping</span>
            <span class="font-medium">RM 10.00</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Tax</span>
            <span class="font-medium">RM <%= number_with_precision(@cart_total * 0.06, precision: 2) %></span>
          </div>
          <hr>
          <div class="flex justify-between text-lg font-semibold">
            <span>Total</span>
            <span>RM <%= number_with_precision(@cart_total + 10 + (@cart_total * 0.06), precision: 2) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
