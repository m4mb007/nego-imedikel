<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Order Confirmation</h1>
    <p class="text-gray-600 mt-2">Step 3 of 3</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Order Confirmation -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow-sm border p-6">
        <!-- Progress Steps -->
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-4">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">
                ✓
              </div>
              <span class="ml-2 text-sm font-medium text-gray-500">Shipping</span>
            </div>
            <div class="w-8 h-1 bg-green-600"></div>
            <div class="flex items-center">
              <div class="w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">
                ✓
              </div>
              <span class="ml-2 text-sm font-medium text-gray-500">Payment</span>
            </div>
            <div class="w-8 h-1 bg-green-600"></div>
            <div class="flex items-center">
              <div class="w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">
                ✓
              </div>
              <span class="ml-2 text-sm font-medium text-gray-900">Confirmation</span>
            </div>
          </div>
        </div>

        <% if @order %>
          <!-- Success Message -->
          <div class="text-center py-8 mb-6">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-check text-green-600 text-2xl"></i>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Order Placed Successfully!</h2>
            <p class="text-gray-600">Thank you for your purchase. Your order has been confirmed.</p>
          </div>

          <!-- Order Details -->
          <div class="bg-gray-50 rounded-lg p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Details</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <p class="text-sm text-gray-600">Order Number</p>
                <p class="font-medium text-gray-900"><%= @order.order_number %></p>
              </div>
              <div>
                <p class="text-sm text-gray-600">Order Date</p>
                <p class="font-medium text-gray-900"><%= @order.created_at.strftime("%B %d, %Y") %></p>
              </div>
              <div>
                <p class="text-sm text-gray-600">Order Status</p>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  <%= @order.status.humanize %>
                </span>
              </div>
              <div>
                <p class="text-sm text-gray-600">Payment Status</p>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= @order.payment_status.humanize %>
                </span>
              </div>
            </div>
          </div>

          <!-- Order Items -->
          <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Items</h3>
            <div class="space-y-4">
              <% @order.order_items.each do |item| %>
                <div class="flex items-center space-x-4 p-4 border rounded-lg">
                  <div class="flex-shrink-0">
                    <% if item.product.main_image %>
                      <%= image_tag item.product.main_image.image, class: "w-16 h-16 object-cover rounded" %>
                    <% else %>
                      <div class="w-16 h-16 bg-gray-200 rounded flex items-center justify-center">
                        <i class="fas fa-image text-gray-400"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h4 class="text-sm font-medium text-gray-900"><%= item.product.name %></h4>
                    <p class="text-sm text-gray-500">Qty: <%= item.quantity %></p>
                    <p class="text-sm text-gray-500">Seller: <%= item.product.seller.full_name %></p>
                  </div>
                  <div class="text-sm font-medium text-gray-900">
                    RM <%= number_with_precision(item.total_price, precision: 2) %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <%= link_to order_path(@order), class: "inline-flex items-center justify-center bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors" do %>
              <i class="fas fa-eye mr-2"></i>
              View Order Details
            <% end %>
            
            <%= link_to orders_path, class: "inline-flex items-center justify-center border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors" do %>
              <i class="fas fa-list mr-2"></i>
              View All Orders
            <% end %>
            
            <%= link_to products_path, class: "inline-flex items-center justify-center border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors" do %>
              <i class="fas fa-shopping-bag mr-2"></i>
              Continue Shopping
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <i class="fas fa-exclamation-triangle text-yellow-400 text-4xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No order found</h3>
            <p class="text-gray-600 mb-6">We couldn't find the order you're looking for.</p>
            <%= link_to checkout_path, class: "inline-flex items-center bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors" do %>
              <i class="fas fa-arrow-left mr-2"></i>
              Back to Checkout
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Order Summary -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-sm border p-6 sticky top-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h3>
        
        <% if @order %>
          <div class="space-y-4 mb-6">
            <% @order.order_items.each do |item| %>
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <% if item.product.main_image %>
                    <%= image_tag item.product.main_image.image, class: "w-12 h-12 object-cover rounded" %>
                  <% else %>
                    <div class="w-12 h-12 bg-gray-200 rounded flex items-center justify-center">
                      <i class="fas fa-image text-gray-400"></i>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate"><%= item.product.name %></p>
                  <p class="text-sm text-gray-500">Qty: <%= item.quantity %></p>
                </div>
                <div class="text-sm font-medium text-gray-900">
                  RM <%= number_with_precision(item.total_price, precision: 2) %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="border-t pt-4 space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Subtotal</span>
              <span class="font-medium">RM <%= number_with_precision(@order.subtotal, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Shipping</span>
              <span class="font-medium">RM <%= number_with_precision(@order.shipping_cost, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Tax</span>
              <span class="font-medium">RM <%= number_with_precision(@order.tax_amount, precision: 2) %></span>
            </div>
            <hr>
            <div class="flex justify-between text-lg font-semibold">
              <span>Total</span>
              <span>RM <%= number_with_precision(@order.total_amount, precision: 2) %></span>
            </div>
          </div>
        <% else %>
          <div class="text-center py-8">
            <i class="fas fa-shopping-cart text-gray-400 text-4xl mb-4"></i>
            <p class="text-gray-600">No order information available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
