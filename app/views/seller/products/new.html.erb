<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Add New Product</h1>
          <p class="mt-1 text-sm text-gray-500">Create a new product listing</p>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to seller_products_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Products
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Product Information</h3>
      </div>
      
      <%= form_with model: @product, url: seller_products_path, local: true, class: "p-6 space-y-6" do |f| %>
        <%= render "devise/shared/error_messages", resource: @product %>

        <!-- Basic Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :name,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "Product name" %>
          </div>

          <div>
            <%= f.label :sku, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :sku,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "SKU-001" %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :category_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :category_id,
                @categories.map { |cat| [cat.name, cat.id] },
                { prompt: "Select a category" },
                { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" } %>
          </div>

          <div>
            <%= f.label :brand, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :brand,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "Brand name" %>
          </div>
        </div>

        <!-- Pricing -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :price, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :price,
                step: 0.01,
                min: 0,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "0.00" %>
          </div>

          <div>
            <%= f.label :average_rating, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :average_rating,
                step: 0.1,
                min: 0,
                max: 5,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "0.0" %>
          </div>
        </div>

        <!-- Inventory -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :stock_quantity, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :stock_quantity,
                min: 0,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "0" %>
          </div>

          <div>
            <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :status,
                [['Draft', 'draft'], ['Active', 'active'], ['Inactive', 'inactive'], ['Archived', 'archived']],
                {},
                { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" } %>
          </div>
        </div>

        <!-- Description -->
        <div>
          <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description,
              rows: 4,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
              placeholder: "Product description..." %>
        </div>

        <!-- Additional Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :weight, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :weight,
                step: 0.01,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "0.00" %>
          </div>

          <div>
            <%= f.label :dimensions, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :dimensions,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500",
                placeholder: "L x W x H" %>
          </div>
        </div>

        <!-- Featured -->
        <div class="flex items-center">
          <%= f.check_box :featured, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
          <%= f.label :featured, class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to seller_products_path, class: "px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Cancel
          <% end %>
          <%= f.submit "Create Product", class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
