<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Order #<%= @order.order_number %></h1>
          <p class="mt-1 text-sm text-gray-500">Order details and management</p>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to seller_orders_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Orders
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Order Details -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Order Status -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-medium text-gray-900">Order Status</h2>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= get_order_status_class(@order.status) %>">
              <%= @order.status.humanize %>
            </span>
          </div>
          
          <!-- Status Actions -->
          <div class="mt-4 flex flex-wrap gap-2">
            <% if @order.pending? %>
              <%= button_to confirm_seller_order_path(@order), method: :patch, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Confirm Order
              <% end %>
            <% end %>
            
            <% if @order.confirmed? %>
              <%= button_to process_order_seller_order_path(@order), method: :patch, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Process Order
              <% end %>
            <% end %>
            
            <% if @order.processing? %>
              <%= button_to ship_seller_order_path(@order), method: :patch, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                Mark as Shipped
              <% end %>
            <% end %>
            
            <% if @order.shipped? %>
              <%= button_to deliver_seller_order_path(@order), method: :patch, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Mark as Delivered
              <% end %>
            <% end %>
            
            <% unless @order.delivered? || @order.cancelled? %>
              <%= button_to cancel_seller_order_path(@order), method: :patch, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700", data: { turbo_confirm: "Are you sure you want to cancel this order?" } do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Cancel Order
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Order Items -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Order Items</h2>
          </div>
          <div class="divide-y divide-gray-200">
            <% @order_items.each do |item| %>
              <div class="px-6 py-4">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-16 w-16">
                    <% if item.product.main_image.attached? %>
                      <%= image_tag item.product.main_image, class: "h-16 w-16 rounded-lg object-cover" %>
                    <% else %>
                      <div class="h-16 w-16 rounded-lg bg-gray-200 flex items-center justify-center">
                        <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-4 flex-1">
                    <div class="flex items-center justify-between">
                      <div>
                        <h3 class="text-sm font-medium text-gray-900">
                          <%= link_to item.product.name, product_path(item.product), class: "hover:text-green-600" %>
                        </h3>
                        <p class="text-sm text-gray-500">SKU: <%= item.product.sku %></p>
                      </div>
                      <div class="text-right">
                        <p class="text-sm font-medium text-gray-900">
                          <%= number_to_currency(item.unit_price) %> Ã— <%= item.quantity %>
                        </p>
                        <p class="text-sm text-gray-500">
                          Total: <%= number_to_currency(item.total_price) %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="space-y-6">
        <!-- Customer Information -->
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Customer Information</h2>
          <div class="space-y-3">
            <div>
              <p class="text-sm font-medium text-gray-500">Name</p>
              <p class="text-sm text-gray-900"><%= @order.user.full_name %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500">Email</p>
              <p class="text-sm text-gray-900"><%= @order.user.email %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500">Phone</p>
              <p class="text-sm text-gray-900"><%= @order.user.phone || 'Not provided' %></p>
            </div>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Order Summary</h2>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Order Number</span>
              <span class="text-sm font-medium text-gray-900">#<%= @order.order_number %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Order Date</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @order.created_at.strftime("%B %d, %Y") %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Items</span>
              <span class="text-sm font-medium text-gray-900"><%= @order_items.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Subtotal</span>
              <span class="text-sm font-medium text-gray-900">
                <%= number_to_currency(@order.subtotal) %>
              </span>
            </div>
            <% if @order.shipping_fee&.positive? %>
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Shipping</span>
                <span class="text-sm font-medium text-gray-900">
                  <%= number_to_currency(@order.shipping_fee) %>
                </span>
              </div>
            <% end %>
            <% if @order.tax_amount&.positive? %>
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Tax</span>
                <span class="text-sm font-medium text-gray-900">
                  <%= number_to_currency(@order.tax_amount) %>
                </span>
              </div>
            <% end %>
            <div class="border-t border-gray-200 pt-3">
              <div class="flex justify-between">
                <span class="text-base font-medium text-gray-900">Total</span>
                <span class="text-base font-medium text-gray-900">
                  <%= number_to_currency(@order.total_amount) %>
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Shipping Information -->
        <% if @order.shipping_address.present? %>
          <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">Shipping Address</h2>
            <div class="text-sm text-gray-900">
              <p><%= @order.shipping_address.full_name %></p>
              <p><%= @order.shipping_address.address_line_1 %></p>
              <% if @order.shipping_address.address_line_2.present? %>
                <p><%= @order.shipping_address.address_line_2 %></p>
              <% end %>
              <p>
                <%= @order.shipping_address.city %>, 
                <%= @order.shipping_address.state %> 
                <%= @order.shipping_address.postal_code %>
              </p>
              <p><%= @order.shipping_address.country %></p>
              <p class="mt-2"><%= @order.shipping_address.phone %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .order-status-pending { @apply bg-yellow-100 text-yellow-800; }
    .order-status-confirmed { @apply bg-blue-100 text-blue-800; }
    .order-status-processing { @apply bg-purple-100 text-purple-800; }
    .order-status-shipped { @apply bg-indigo-100 text-indigo-800; }
    .order-status-delivered { @apply bg-green-100 text-green-800; }
    .order-status-cancelled { @apply bg-red-100 text-red-800; }
    .order-status-refunded { @apply bg-gray-100 text-gray-800; }
  </style>
<% end %>
